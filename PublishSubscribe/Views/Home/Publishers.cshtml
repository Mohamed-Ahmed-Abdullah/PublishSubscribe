@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/app/publishers.js"></script>
}

<div class="row">

    <h2 class="row">Publishers</h2>

    <div class="row">
        <label for="publishers">Publisher</label>
        <select class="form-control" id="publishers">
        </select>
    </div>

    <div class="row">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Title">
    </div>

    <div class="row">
        <label for="message">Message</label>
        <textarea class="form-control" rows="3" id="message"></textarea>
    </div>

    <div class="row">
        <label for="tags">Tags</label>
        <input type="text" class="form-control" id="tags" placeholder="tag1,tag2">
        <p class="help-block">separate tags by comma Ex. tag1,tag2</p>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-primary" id="distribute">Distribute</button>
    </div>

</div>