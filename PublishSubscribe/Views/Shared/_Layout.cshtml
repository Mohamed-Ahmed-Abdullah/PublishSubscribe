<!DOCTYPE html>
<html>
<head>
    <title>Publish Subscribe</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/Angular/zone.js"></script>
    <script src="~/Scripts/Angular/reflect-metadata.js"></script>

    <script src="~/Scripts/Angular/Rx.js"></script>
    <script src="~/Scripts/Angular/core.umd.js"></script>
